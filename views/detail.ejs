<%- include('./partials/head') %>

  <main>


    <a href="/" class="back"> terug </a>

    <article class="detail">

      <% items.forEach(item=> { %>
        <article class="details">
          <a href="./detail/<%= item.id %>" class="item-detail">
             <h2 class="item-titel">
                <%= item.title %>
              </h2>
              <h3 class="titel-auteur">
                <%= item.auteur %>
              </h3>
          </a>


          <article class="detail-container">
            <% if (item.afbeelding) { %>
              <img src="https://fdnd-agency.directus.app/assets/<%= item.afbeelding %>" class="item-afbeelding" alt="">
            <% } %>

          </article>

              <article class="container">

                <article class="section">
                  <h3 class="samenvatting">Samenvatting</h3>
                    <div class="item-samenvatting"><%- item.description %></div>
                </article>

                <article class="formulier">
                  <% if (!opLeeslijst) { %>
                   

                  <form method="post" action="/detail/<%= item.id %>" class="add-item">
                    <button class="leeslijst-button" type="submit">voeg toe aan leeslijst</button>
                  </form>
                    <% } else { %>
                  <button class="toegevoegd">Toegevoegd aan de leeslijst</button>
                    <% } %>

                  <form method="POST" action="/detail/<%= item.id %>" class="reserveer-item">
                    <input type="hidden" name="id" value="<%= item.id %>">
                    <button class="reserveer-button" type="submit">reserveer</button>
                  </form>

                  <form method="POST" action="/detail/<%= item.id %>" class="favo-item">
                    <input type="hidden" name="id" value="<%= item.id %>">
                      <button class="bookmark-detail" type="submit"><svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
                        <title>Bookmark Icon [Active]</title>
                        <path id="bookmark" d="M4 0h32v40L20 28 4 40V0z" stroke="currentColor" stroke-width="0"
                          clip-path="url(#clip)" />
                        <clipPath id="clip">
                          <use xlink:href="#bookmark" />
                        </clipPath>
                      </svg>
                    </button>
                  </form>

                </article>

              </article>

    
            </article>    <% }) %>
         

     
          

  </main>

  <%- include('./partials/foot') %>