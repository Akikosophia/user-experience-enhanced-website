<%- include('./partials/head') %>

  <main>


      <a href="/" class="back"> terug </a>

      <article class="detail">

        <% items.forEach(item=> { %>
          <article class="details">
            <a href="./detail/<%= item.id %>" class="item-detail">
              <% if (item.afbeelding) { %>
                <h2 class="item-titel">
                  <%= item.title %>
                </h2>
                <h3 class="titel-auteur"> <%= item.auteur %></h3>
            </a>

            <article class="detail-container">

            <img src="https://fdnd-agency.directus.app/assets/<%= item.afbeelding %>" class="item-afbeelding" alt="">
            <% } %>

            <article class="container">

            <article class="section">
              <h3 class="samenvatting">Samenvatting</h3>
              <div class="box-samenvatting"><p class="item-samenvatting"><%- item.description %></p></div>
            </article>



        <article class="formulier">
          <form method="POST" action="/detail/<%= item.id %>" class="add-item">
            <input type="hidden" name="id" value="<%= item.id %>">
            <input type="hidden" name="title" value="<%= item.title %>">
            <input type="hidden" name="afbeeling" value="<%= item.afbeelding %>">
            <button class="leeslijst-button" type="submit">voeg toe aan leeslijst</button>
            <!-- <button class="leeslijst-btn"> Voeg toe aan leeslijst</button> -->
          </form>
     
         
          <form method="POST" action="/detail/<%= item.id %>" class="reserveer-item">

            <button class="reserveer-button" type="submit">reserveer</button>
            <!-- <button class="leeslijst-btn"> Voeg toe aan leeslijst</button> -->
          </form>

          </article>
 
        </article>

          <!-- <button class="like-button">❤️</button> -->
          <% }) %>



      </article>
      <!-- popup dialog-->

  </main>

  <%- include('./partials/foot') %>