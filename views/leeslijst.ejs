<%- include('./partials/head') %>

<main>



    <h1 class="favorieten">Favorieten </h1>

    <article class="scroll-lijst">
            <!-- Display loading state UI -->
            <% if (items.length) { %>
                <ul class="leeslijst">
                    <% items.forEach(item => { %>
                        <li class="leeslijst-item">
                            <% if (item.afbeelding) { %>
                                <img src="https://fdnd-agency.directus.app/assets/<%= item.afbeelding %>"
                                class="item-afbeelding" alt="">
                            <% } %>

                            <h3 class="leeslijst-titel">
                                <a href="./detail/<%= item.id %>">
                                    <%= item.title %>   
                                </a>
                            </h3>
                        </div>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>                
                <h1>Er zijn geen lijsten</h1>
            <% } %> <!-- Closing the items check -->
    </article>
    
    
</main>
<%- include('./partials/foot') %>


