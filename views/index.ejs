      <script>
         document.getElementById("scroll-to-right").addEventListener("click", function () {
            console.log("triggered scroll to right");
            // Get the container element
            var container = document.querySelector(".scroll-container");

            // Calculate how much to scroll (half of the container's width for a smooth experience)
            var scrollAmount = container.clientWidth / 2;

            container.scrollLeft += scrollAmount; // Scroll to the right
         });

         document.getElementById("scroll-to-left").addEventListener("click", function () {
            console.log("triggered scroll to left");
            // Get the container element
            var container = document.querySelector(".scroll-container");

            // Calculate how much to scroll (half of the container's width for a smooth experience)
            var scrollAmount = container.clientWidth / 2;

            container.scrollLeft -= scrollAmount; // Scroll to the left
         });
      </script>